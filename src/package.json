{
	"name": "hexor-utility",
	"version": "1.0.6",
	"description": "A simple color picker app for MacOS made by problaze20 (https://github.com/problaze20)",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"build": "npm run dist"
	},
	"build": {
		"appId": "com.hi.problaze20.hexorutility",
		"productName": "Hexor Utility",
		"artifactName": "${productName}-${os}-${arch}-v${version}.${ext}",
		"mac": {
			"target": [
				"zip"
			],
			"icon": "build/icon.icns"
		},
		"files": [
			"index.html",
			"main.js",
			"preload.js",
			"renderer.js",
			"styles.css",
			"build/icon.icns"
		]
	},
	"devDependencies": {
		"electron": "^38.0.0",
		"electron-builder": "^24.13.3"
	}
}
