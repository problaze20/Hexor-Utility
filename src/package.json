{
  "name": "hexor-utility",
  "version": "1.0.2",
  "description": "A simple color picker app for MacOS made by problaze20 (https://github.com/problaze20)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.problaze20.hexorutility",
    "productName": "Hexor Utility",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "files": [
      "index.html",
      "main.js",
      "build/icon.icns"
    ]
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^24.13.3",
    "terser": "^5.44.0"
  }
}
